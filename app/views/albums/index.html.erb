<div class="span-16 body">
	<h1>Listing albums 	<span><%= link_to 'New album', new_album_path %></span></h1>

	<div class="mod artists">
		<div class="bd">
			<ul>
				<% for album in @albums %>
				  <li>
				    <h2><%= link_to album.name, album %>
				    <%= album.artist.name if album.artist %></h2>
				  </li>
				<% end %>
			</ul>
		</div>
		<div class="ft">
			<%= will_paginate @albums %>
			<p>
        <%= link_to "#{image_tag 'feed-icon-14x14.png'} Subscribe to the RSS feed", formatted_albums_path(:rss), :class => "feed"  %>
      </p>
		</div>
	</div>

</div>

<div class="span-8 last rail">
	<%= render :partial => "shared/generic_module" %>
	
	<ul class="mod">
		<li><%= link_to 'Edit', edit_album_path(album) %></li>
	    <!-- <li><%#= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %></li> -->
	</ul>
</div>
